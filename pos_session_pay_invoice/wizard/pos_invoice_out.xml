<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_invoice_out_form" model="ir.ui.view">
        <field name="name">pos_invoice_out_form</field>
        <field name="model">pos.invoice.out</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Register customer payment">
                <group>
                    <field name="company_id" invisible="1"/>
                    <field name="journal_ids" invisible="1"/>
                    <field name="journal_id"
                           class="oe_inline"
                           domain="[('id', 'in', journal_ids[0][2])]"
                           options="{'no_create': True, 'no_open':True}"
                    />
                    <field name="invoice_id"
                           class="oe_inline"
                           domain="[('company_id', '=', company_id),
                           ('state', '=', 'open'),
                           ('type', 'in', ['out_invoice', 'in_refund'])]"
                           options="{'no_create': True, 'no_open':True}"
                    />
                    <field name="amount" class="oe_inline"/>
                </group>
                <footer>
                    <button name="run" string="Register" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window
            id="action_pos_invoice_out"
            name="Pay invoice"
            res_model="pos.invoice.out"
            src_model="pos.session"
            view_mode="form"
            target="new"
            key2="client_action_multi"
        />
</odoo>