<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="XmlReceipt">
        <t t-jquery='.before-footer' t-operation='append'>
            <t t-foreach='paymentlines' t-as='line'>
                <t t-if='line.card_receipt'>
                    <t t-foreach="line.card_receipt" t-as="receipt_field">
                        <line>
                            <left><t t-esc="receipt_field"/></left>
                        </line>
                    </t>
                    <line>
                        <left>APPROVED</left>
                    </line>
                </t>
            </t>
        </t>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery='.receipt-change' t-operation='after'>
            <div class="pos-center-align">CARDHOLDER COPY</div>
            <br />
            <table class='receipt-paymentlines-adyen'>
                <t t-foreach="paymentlines" t-as="line">
                    <t t-if='line.card_receipt'>
                        <t t-foreach="line.card_receipt" t-as="receipt_field">
                            <tr>
                                <td class="pos-left-align">
                                    <t t-esc="receipt_field"/>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="pos-center-align">
                                APPROVED
                            </td>
                        </tr>
                    </t>
                </t>
            </table>
        </t>
        <t t-jquery='.receipt-paymentlines' t-operation="replace"/>
    </t>

    <t t-name="AutomatedPaymentPopupWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-payment" style="width: 800px;">
                <header class="title"><t t-esc=" widget.options.title || 'Confirm ?' " /></header>
                <main class="body">
                    <div class="row">
                        <t t-esc="  widget.options.body || '' "/>
                    </div>
                    <t t-if="widget.options.data">
                        <div class="row card-row">
                            <i class="fa fa-credit-card fa-10x card-icon"></i>
                            <ul class="card-details">
                                <li>Card Type: <t t-esc="widget.options.data.paymentMethod || ''"/></li>
                                <li>Card Summary: *****<t t-esc="widget.options.data.cardSummary || ''"/></li>
                                <li>Funding Source: <t t-esc="widget.options.data.fundingSource || ''"/></li>
                                <li>Expiry Date: <t t-esc="widget.options.data.expiryDate || ''"/></li>
                            </ul>
                        </div>
                    </t>
                </main>
                <footer class="footer">
                    <div class="button confirm">
                        Confirm
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
