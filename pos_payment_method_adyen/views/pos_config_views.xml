<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[6]" position="after">
                <h2>Adyen Integration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-lg-6 o_setting_box" id="product_prices">
                        <div class="o_setting_right_pane">
                            <label for="adyen_terminal_identifier" string="Adyen Terminal Identifier"/>
                            <div class="text-muted">
                                Identification of the payment terminal to be used by this Point of Sale
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="adyen_payment_method_present" invisible="1"/>
                                    <field name="adyen_terminal_identifier" attrs="{'required': [('adyen_payment_method_present', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane">
                            <field name="passive_shopper_recognition"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="passive_shopper_recognition"/>
                            <div class="text-muted">
                                Gain insights to grow your business.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane">
                            <field name="active_shopper_recognition"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="active_shopper_recognition"/>
                            <div class="text-muted">
                                Engage recognized shoppers by personalizing their shopping experience.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
