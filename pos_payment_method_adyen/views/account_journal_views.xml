<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="pos_payment_method.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="adyen_api_key"
                       attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')], 'required': [('use_payment_terminal', '=', 'adyen')]}"/>
                <field name="adyen_terminal_identifier"
                       attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')], 'required': [('use_payment_terminal', '=', 'adyen')]}"/>
                <field name="adyen_show_receipt_poi"
                       attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')]}"/>
                <field name="adyen_test_mode"
                       attrs="{'invisible': [('use_payment_terminal', '!=', 'adyen')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
